upstream django {
    server unix:///run/uwsgi/app/brusvyanka/socket;
}


server {
    listen       80;
    server_name  _;

    location ~* ^.+\.(txt|ico)$ {
       expires 8d;
       root /opt/brusvyanka/static/;
    }

    location /static/admin {
        expires 8d;
        alias /opt/brusvyanka/.env/lib/python2.7/site-packages/django/contrib/admin/static/admin;
    }

    location /static {
       expires 8d;
       alias /opt/brusvyanka/static;
    }


    location /media {
       expires 8d;
       alias /opt/brusvyanka/media;
    }


    location /admin/media {
       expires 8d;
       alias /opt/brusvyanka/media;
    }

    location / {
        uwsgi_pass  django;
        include     /etc/nginx/uwsgi_params;
     }

}
